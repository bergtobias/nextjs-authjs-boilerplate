model Tennant {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy User     @relation(fields: [createdById], references: [id])
  name      String   @unique

  createdById String
  Facility    Facility[]
}

model Facility {
  id         String       @id @default(cuid())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  createdBy  User         @relation(fields: [createdById], references: [id])
  name       String       @unique
  Tennant    Tennant      @relation(fields: [tennantId], references: [id])
  Appartment Appartment[]

  createdById String
  tennantId   String
  Config      Config[]
}

model Appartment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy User     @relation(fields: [createdById], references: [id], name: "createdAppartments")
  name      String   @unique
  members   User[]   @relation(name: "appartmentMembers")

  createdById String
  Facility    Facility? @relation(fields: [facilityId], references: [id])
  facilityId  String?
}
